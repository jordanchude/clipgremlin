# Twitch Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here  
TWITCH_BOT_TOKEN=oauth:your_bot_token_here
TWITCH_REDIRECT_URI=http://localhost:5000/auth/callback
CHANNEL_NAME=your_target_channel_name

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Web Application Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-super-secret-key-here
DATABASE_URL=postgresql://clipgremlin:clipgremlin_dev@db:5432/clipgremlin
DB_PASSWORD=clipgremlin_dev

# AWS Configuration (optional - for production)
AWS_REGION=us-east-1
USE_SECRETS_MANAGER=false
ECS_CLUSTER_NAME=clipgremlin-cluster
ECS_TASK_DEFINITION=clipgremlin-task
SUBNET_IDS=subnet-xxxxxxxx,subnet-yyyyyyyy
SECURITY_GROUP_ID=sg-xxxxxxxxx

# Bot Settings (optional - defaults provided)
SILENCE_DURATION=60
MAX_MESSAGE_RATE=20
RATE_LIMIT_WINDOW=30
AUDIO_CHUNK_DURATION=10
MAX_AUDIO_SIZE_MB=25

# Logging
LOG_LEVEL=INFO
